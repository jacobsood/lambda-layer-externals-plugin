{
  "name": "lambda-layer-externals-plugin",
  "version": "1.0.0",
  "description": "Webpack plugin to export used node_modules as a separate package for the lambda layer",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": ["lib/**/*"],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jacobsood/lambda-layer-externals-plugin.git"
  },
  "keywords": [
    "webpack",
    "lambda-layer",
    "lambda",
    "aws",
    "externals"
  ],
  "author": "Jacob Sood",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jacobsood/lambda-layer-externals-plugin/issues"
  },
  "homepage": "https://github.com/jacobsood/lambda-layer-externals-plugin#readme",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf lib/",
    "lint": "eslint './src/**/*.ts'",
    "lint:fix": "yarn lint -- --fix",
    "prepare": "husky install && yarn build",
    "prepublish": "yarn lint:fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "lint-staged": {
    "**/*.ts": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "archiver": "^5.3.1",
    "webpack": "^5.76.1"
  },
  "devDependencies": {
    "@types/archiver": "^5.3.2",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.25.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-jest": "^27.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5"
  }
}
